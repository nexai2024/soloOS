  HIGH
  CRITICAL
}

enum Frequency {
  RARE
  OCCASIONAL
  FREQUENT
  CONSTANT
}

enum ProjectStatus {
  PLANNING
  BUILDING
  TESTING
  DEPLOYED
  PAUSED
  COMPLETED
  ARCHIVED
}

enum MilestoneStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
  DELAYED
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  BLOCKED
  REVIEW
  DONE
  BACKLOG
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum AdCampaignStatus {
  DRAFT
  ACTIVE
  PAUSED
  ENDED
}

enum AdPlatform {
  GOOGLE
  META
  REDDIT
  TIKTOK
  LINKEDIN
  OTHER
}

enum ContactEventType {
  PAGE_VIEW
  SIGNUP
  UPGRADE
  SUPPORT
  FEEDBACK
  EMAIL_OPEN
  EMAIL_CLICK
}

enum ContactLifecycleStage {
  LEAD
  QUALIFIED
  OPPORTUNITY
  CUSTOMER
  CHAMPION
  CHURNED
}

enum FeatureType {
  MVP
  NICE_TO_HAVE
  FUTURE
}

enum NewsletterAudience {
  WAITLIST
  CONTACTS
}

enum NewsletterStatus {
  DRAFT
  SCHEDULED
  SENT
}

enum PhaseStatus {
  PLANNING
  IN_PROGRESS
  REVIEW
  COMPLETED
}

enum SocialPlatform {
  TWITTER
  LINKEDIN
  THREADS
  BLUESKY
  MASTODON
  OTHER
}

enum SocialPostStatus {
  DRAFT
  SCHEDULED
  PUBLISHING
  PUBLISHED
  FAILED
}

enum WaitlistStatus {
  PENDING
  INVITED
  CONVERTED
  ARCHIVED
}

enum ImprovementStatus {
  PENDING
  COMPLETED
  DISMISSED
}

// ==================== Marketing Platform Models ====================

model BlogPost {
  id              String                 @id
  tenantId        String
  title           String
  slug            String
  content         Json?
  excerpt         String?
  status          BlogPostStatus         @default(DRAFT)
  featuredImage   String?
  seoTitle        String?
  seoDescription  String?
  seoKeywords     String[]               @default([])
  canonicalUrl    String?
  publishAt       DateTime?
  publishedAt     DateTime?
  viewCount       Int                    @default(0)
  productId       String?
  createdAt       DateTime               @default(now())
  updatedAt       DateTime
  Product         Product?               @relation(fields: [productId], references: [id])
  Categories      BlogPostCategory[]
  Tags            BlogPostTag[]
  CalendarEntries ContentCalendarEntry[]

  @@unique([tenantId, slug])
  @@index([tenantId])
  @@index([status])
  @@index([productId])
}

model BlogCategory {
  id        String             @id
  tenantId  String
  name      String
  slug      String
  color     String             @default("#6366f1")
  createdAt DateTime           @default(now())
  Posts     BlogPostCategory[]

  @@unique([tenantId, slug])
  @@index([tenantId])
}

model BlogTag {
  id        String        @id
  tenantId  String
  name      String
  slug      String
  createdAt DateTime      @default(now())
  Posts     BlogPostTag[]

  @@unique([tenantId, slug])
  @@index([tenantId])
}

model BlogPostCategory {
  blogPostId String
  categoryId String
  BlogPost   BlogPost     @relation(fields: [blogPostId], references: [id], onDelete: Cascade)
  Category   BlogCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([blogPostId, categoryId])
}

model BlogPostTag {
  blogPostId String
  tagId      String
  BlogPost   BlogPost @relation(fields: [blogPostId], references: [id], onDelete: Cascade)
  Tag        BlogTag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([blogPostId, tagId])
}

model NewsletterTemplate {
  id        String               @id
  tenantId  String
  name      String
  blocks    Json?
  thumbnail String?
  isDefault Boolean              @default(false)
  createdAt DateTime             @default(now())
  updatedAt DateTime
  Campaigns NewsletterCampaign[]

  @@index([tenantId])
}

model NewsletterSubscriber {
  id        String                     @id
  tenantId  String
  email     String
  firstName String?
  lastName  String?
  status    SubscriberStatus           @default(ACTIVE)
  source    String?
  createdAt DateTime                   @default(now())
  updatedAt DateTime
  Lists     NewsletterListSubscriber[]

  @@unique([tenantId, email])
  @@index([tenantId])
  @@index([status])
}

model NewsletterList {
  id          String                     @id
  tenantId    String
  name        String
  description String?
  color       String                     @default("#6366f1")
  createdAt   DateTime                   @default(now())
  updatedAt   DateTime
  Subscribers NewsletterListSubscriber[]

  @@index([tenantId])
}

model NewsletterListSubscriber {
  subscriberId String
  listId       String
  joinedAt     DateTime             @default(now())
  Subscriber   NewsletterSubscriber @relation(fields: [subscriberId], references: [id], onDelete: Cascade)
  List         NewsletterList       @relation(fields: [listId], references: [id], onDelete: Cascade)

  @@id([subscriberId, listId])
}

model SocialAccount {
  id             String         @id
  tenantId       String
  platform       SocialPlatform
  accountName    String
  accountId      String?
  accessToken    String?
  refreshToken   String?
  tokenExpiresAt DateTime?
  isConnected    Boolean        @default(true)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime
  Posts          SocialPost[]

  @@unique([tenantId, platform, accountName])
  @@index([tenantId])
}

model ContentCalendarEntry {
  id           String              @id
  tenantId     String
  title        String
  entryType    CalendarEntryType
  date         DateTime
  color        String?
  status       CalendarEntryStatus @default(PLANNED)
  blogPostId   String?
